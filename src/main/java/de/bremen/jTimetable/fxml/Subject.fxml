<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="de.bremen.jTimetable.fxmlController.SubjectController"
            prefHeight="400.0" prefWidth="800.0" minWidth="800">
    <ScrollPane>
        <VBox >
            <children>
                <Label text="%subject.title"></Label>
                <CheckBox fx:id="chkToogleSubject" text="%chkbox.ToogleInactive"></CheckBox>

                <HBox>
                    <children>
                        <TableView fx:id="SubjectTableview" minWidth="800">
                            <columns>
                                <TableColumn text="%subject.SubjectTableview.id" fx:id="ID" visible="false"></TableColumn>
                                <TableColumn text="%subject.SubjectTableview.caption" fx:id="Caption"></TableColumn>
                                <TableColumn text="%subject.SubjectTableview.active" fx:id="Active"></TableColumn>
                            </columns>
                        </TableView>
                    </children>
                </HBox>
                <VBox fx:id="editbox">

                    <HBox>
                        <Label text="%subject.editbox.id"></Label><TextField fx:id="txtID"></TextField>
                    </HBox>
                    <HBox>
                        <Label text="%subject.editbox.caption"></Label><TextField fx:id="txtCaption"></TextField>
                    </HBox>
                    <HBox>
                        <Label text="%subject.editbox.active"></Label><CheckBox fx:id="chkActive"></CheckBox>
                    </HBox>
                    <HBox>
                        <Button fx:id="btnSave" text="%button.save"></Button>
                    </HBox>

                </VBox>
            </children>
        </VBox>
    </ScrollPane>

</AnchorPane>
