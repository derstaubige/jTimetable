<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml" fx:controller="de.bremen.jTimetable.fxmlController.StudySectionController" prefHeight="400.0" prefWidth="800.0" minWidth="800">
    <fx:include fx:id="mainMenu" fillWidth="true" source="Menu.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
    <VBox spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="40.0">
        <children>
            <Label text="%studysection.title"></Label>
            <HBox spacing="20.0">
                <children>
                    <TableView fx:id="StudySectionTableview" minWidth="800.0">
                        <columns>
                            <TableColumn text="%studysection.StudySectionTableview.ID" fx:id="ID" visible="false"></TableColumn>
                            <TableColumn text="%studysection.StudySectionTableview.Description" fx:id="Description"></TableColumn>
                            <TableColumn text="%studysection.StudySectionTableview.Active" fx:id="Active"></TableColumn>
                        </columns>
                    </TableView>
                    <VBox minWidth="200.0" spacing="10.0">
                        <Button fx:id="btnStudySectionEdit" text="%button.edit"></Button>
                        <Button fx:id="btnStudySectionNew" text="%button.new"></Button>
                        <CheckBox fx:id="chkToogleStudySection" text="%chkbox.ToogleInactive"></CheckBox>
                    </VBox>
                </children>
            </HBox>
            <VBox fx:id="editbox" spacing="10.0">
                <HBox spacing="10.0">
                    <Label text="%studysection.editbox.ID"></Label>
                    <TextField fx:id="txtID"></TextField>
                </HBox>
                <HBox spacing="10.0">
                    <Label text="%studysection.editbox.Description"></Label>
                    <TextField fx:id="txtDescription"></TextField>
                </HBox>
                <HBox spacing="10.0">
                    <Label text="%studysection.editbox.Active"></Label>
                    <CheckBox fx:id="chkActive"></CheckBox>
                </HBox>
                <HBox spacing="10.0">
                    <Button fx:id="btnSave" text="%button.save"></Button>
                </HBox>
            </VBox>
        </children>
    </VBox>
</AnchorPane>
